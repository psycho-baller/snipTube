{
  "name": "sniptube",
  "displayName": "Sniptube",
  "version": "0.0.1",
  "description": "Save the most important parts of a YouTube video with built-in AI for summarization",
  "author": "Rami",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.74.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@types/chrome": "0.0.237",
    "@types/node": "20.2.5",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "typescript": "5.0.4"
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "https://*.youtube.com/*"
    ]
  }
}
